   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="jp.littleforest.pathtools.commands.OpenFolder"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+O">
      </key>
      <key
            commandId="jp.littleforest.pathtools.commands.OpenFolder"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+P">
      </key>
   </extension>
   -->
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="jp.littleforest.pathtools.preferences.PathToolsPreferencePage"
            id="jp.littleforest.pathtools.preferences.PathToolsPreferencePage"
            name="PathTools">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="jp.littleforest.pathtools.PathToolsPlugin">
      </startup>
   </extension>
</plugin>
